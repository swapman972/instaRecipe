<h1><%= @post.recipe.name %> </h1>
<h3><%= @post.description %> </h3>
<br>
    <img src="<%="#{@post.picture}"%>">

<br>
<h2> by <%= link_to @post.user.name, user_path(@post.user) %> </h2>
<br>
<p> Likes: <%= @post.total_likes %>  </p>
<p> Dislikes: <%= @post.total_dislike %>  </p>
<p> Loves: <%= @post.total_love %>  </p>
<p> Disgust: <%= @post.total_disgust %>  </p>

<br>
<h4>Comments</h4>
<% @post.post_react.each do |react|  %> 
<h4> <%= react.comment %></h4>
<%end%> 

