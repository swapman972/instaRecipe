<h1> <%= @user.name %> </h1>
<h2> <%= @user.location %> </h2>
<h2> Age: <%= @user.age %> </h2>

<br>
<p> <%= link_to 'Edit User', edit_user_path(@user)%> </p>

<h3> Posts </h3>
<ul>
    <% @user.posts.each do |post| %> 
    <li><%= link_to post.recipe.name, post_path(post) %> || Rading <%= post.rating %> </li>
    <%end%> 
</ul>

<%= link_to 'Delete User', method: :delete%> 